<Window x:Class="Async_RestAPI_M4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Async_RestAPI_M4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="0.2*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Content="Async Project" FontSize="16" Margin="10"/>

        <Button Click="ButtonSync_Click" Grid.Row="1" Content="Load Sync" FontSize="20" Margin="10"/>

        <Button Click="ButtonAsync_Click" Grid.Row="2" Content="Load Async" FontSize="20" Margin="10"/>

        <TextBlock Name="textBlockInfo" Grid.Row="3" Text="Info" Margin="10"/>
    </Grid>
</Window>
